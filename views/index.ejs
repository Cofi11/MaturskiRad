<!DOCTYPE html>
<html>
    <head> 
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/public/style.css">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <title>Test</title>
    </head>

    <body>
        <%- include('./partials/header.ejs')%> 

        <div class="container1">
            <p id="text1">Test creator</p>
            <div class="user-form">
                <% if(!username) {%> 
                <form action="/login" method="POST">
                    <div class="user-field">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" required>
                    </div>
                    <div class="user-field">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required>
                    </div>  
                    <button class="login-button" type="submit">Login</button>
                </form>
                <div>
                    <a class="register-link" href="/register">Register here</a>
                </div>

                <% } else { %>
                   <h2>Hi <%= username %> </h2>
                    <form action="/logout?_method=DELETE" method="POST">
                        <button class="login-button" type="submit">Log Out</button>
                    </form>
                    <div class="buttons">
                        <a href="/tests/new" class="button1" id="newtest">CreateNewTest</a>
                    </div>
                <% } %>
                <%- include('./partials/errorMessage.ejs')  %>     
            </div>
            
        </div>
        

        <script src="/public/main.js"></script>
    </body>
</html>